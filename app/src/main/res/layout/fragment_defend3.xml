<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:backgroundTintMode="multiply"
    tools:context="com.quantum.fragmentnavication.DefendFragment3">

    <!-- TODO: Update blank fragment layout -->


    <include layout="@layout/floatbutton" />

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_below="@id/ApplicationText"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/crypto_explain" />

    <TextView
        android:id="@+id/ApplicationText"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/baloo_bhai_2_extrabold"
        android:text="Usage in Defender's Perspective"
        android:textAlignment="center"
        android:textColor="@color/light_purple"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_below="@id/imageView"
        android:layout_above="@id/Defendfragment3toNext"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="After the complete stream of photons has been sent, Bob will send the sequence of beamsplitters he randomly used back to Alice. \n\nAlice would then compare the information and discard the photons read by the wrong beamsplitters. The remaining bits become the key.
"
        android:textAlignment="center"
        android:textColor="@color/light_purple"
        android:textSize="17sp" />



    <Button
        android:id="@+id/Defendfragment3toNext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="40dp"
        android:layout_x="250dp"
        android:layout_y="665dp"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Defendfragment3toPrevious"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginRight="234dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="@string/previous"
        android:textColor="@color/black"
        android:textSize="20sp" />



</RelativeLayout>

