<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:backgroundTint="#000000"
    android:backgroundTintMode="multiply"
    tools:context=".fragment6">

    <!-- TODO: Update blank fragment layout -->


    <include layout="@layout/floatbutton" />

    <TextView
        android:id="@+id/ApplicationText"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:layout_x="135dp"
        android:layout_y="13dp"
        android:fontFamily="@font/baloo_bhai_2_extrabold"
        android:text="Brief Introduction"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="350dp"
        android:layout_height="109dp"
        android:layout_below="@+id/ApplicationText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_x="42dp"
        android:layout_y="105dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/last_intro"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/last_intro_2"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="144dp"
        android:layout_above="@+id/textView4"
        android:layout_below="@+id/defenseLaunch"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/last_intro_3"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="144dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-67dp"
        android:layout_marginBottom="-100dp"
        android:layout_x="36dp"
        android:layout_y="20dp"
        android:textStyle="italic"
        android:fontFamily="@font/baloo_bhai_2"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/tips"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <Button
        android:id="@+id/fragment6toPrevious"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginRight="234dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="@string/previous"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <Button
        android:id="@+id/attackLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-100dp"
        android:backgroundTint="@color/light_red"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="Usage in Attacker's Perspective"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/defenseLaunch"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"

        android:backgroundTint="@color/light_purple"
        android:fontFamily="@font/baloo_bhai_2_semibold"
        android:text="Usage in Defender's Perspective"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>

